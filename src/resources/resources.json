{
    "pi": {
      "name": "WoT Pi",
      "port": 8080,
      "sensors": {
        "temperature": {
          "name": "Temperature Sensor",
          "description": "An ambient temperature sensor.",
          "unit": "celsius",
          "value": 0,
	        "critical": 1000,
          "interval": 5000,
          "gpio": 14
        },
        "humidity": {
          "name": "Humidity Sensor",
          "description": "An ambient humidity sensor.",
          "unit": "%",
          "value": 0,
          "interval": 5000,
          "gpio": 14
