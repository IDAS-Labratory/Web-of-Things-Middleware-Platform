          "3": {
            "name": "LED 3",
            "description": "A Blue LED.",
            "value": false,
            "gpio": 7
          },
          "alert": {
            "name": "Alert LED",
            "description": "A Red Alert LED.",
            "value": false,
            "gpio": 20
          }
        }
      }
    }
